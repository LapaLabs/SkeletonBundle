{% extends "BWSkeletonBundle:html5:base.html.twig" %}

{% block flash_messages -%}
    {% if app.session.flashBag.peekAll %}
        <div id="flash-messages">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        {% block flash_messages_wrap -%}
                            {% for status, flashMessages in app.session.flashbag.all %}
                                {% for flashMessage in flashMessages %}
                                    <div class="alert alert-dismissable alert-{{ status }} fade in">
                                        {{ flashMessage|raw }}
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        {%- endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{%- endblock %}

{% block header -%}
    <header>
        <div id="header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        {% block header_wrap -%}
                            % Layout::Header %
                        {%- endblock %}
                    </div>
                </div>
            </div>
        </div>
    </header>
{%- endblock %}

{% block content -%}
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {% block content_wrap -%}
                        % Layout::Content %
                    {%- endblock %}
                </div>
            </div>
        </div>
    </div>
{%- endblock %}

{% block footer -%}
    <footer>
        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        {% block footer_wrap -%}
                            % Layout::Footer %
                        {%- endblock %}
                    </div>
                </div>
            </div>
        </div>
    </footer>
{%- endblock %}

{% block overflow -%}
    <div id="overflow">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {% block overflow_wrap -%}
                        % Layout::Overflow %
                    {%- endblock %}
                </div>
            </div>
        </div>
    </div>
{%- endblock %}
